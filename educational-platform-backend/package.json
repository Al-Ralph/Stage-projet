{
  "name": "educational-platform-backend",
  "version": "1.0.0",
  "description": "Ultra-performant backend for Educational Platform with AI-powered recommendations",
  "private": true,
  "workspaces": [
    "api-gateway",
    "auth-service",
    "user-service",
    "course-service",
    "recommendation-service",
    "progress-service",
    "social-service",
    "notification-service",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && lerna bootstrap",
    "dev": "concurrently \"npm run dev:*\"",
    "dev:gateway": "cd api-gateway && npm run dev",
    "dev:auth": "cd auth-service && npm run dev",
    "dev:user": "cd user-service && npm run dev",
    "dev:course": "cd course-service && npm run dev",
    "dev:recommendation": "cd recommendation-service && npm run dev",
    "dev:progress": "cd progress-service && npm run dev",
    "dev:social": "cd social-service && npm run dev",
    "dev:notification": "cd notification-service && npm run dev",
    "build": "lerna run build",
    "test": "lerna run test",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:coverage": "lerna run test:coverage",
    "test:smoke": "node scripts/smoke-tests.js",
    "test:apis": "node scripts/test-apis.js",
    "test:apis:simple": "node scripts/test-apis-simple.js",
    "start:test": "node scripts/start-simple.js",
    "lint": "lerna run lint",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "prisma:generate": "cd shared && npx prisma generate",
    "prisma:migrate": "cd shared && npx prisma migrate deploy",
    "prisma:migrate:dev": "cd shared && npx prisma migrate dev",
    "prisma:seed": "cd shared && npx prisma db seed",
    "db:reset": "cd shared && npx prisma migrate reset",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f kubernetes/",
    "k8s:delete": "kubectl delete -f kubernetes/",
    "k8s:logs": "kubectl logs -f deployment/api-gateway -n production",
    "k8s:scale": "kubectl scale deployment --replicas=5 api-gateway -n production",
    "setup": "node scripts/setup-env.js",
    "start:dev": "./scripts/start-dev.sh",
    "deploy": "./scripts/deploy.sh",
    "db:start": "docker-compose up -d postgres redis mongodb",
    "db:stop": "docker-compose down"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "lerna": "^8.1.2",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/educational-platform-backend.git"
  },
  "keywords": [
    "education",
    "microservices",
    "nodejs",
    "typescript",
    "ai",
    "recommendations"
  ],
  "author": "Steve Ataky, PhD",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0"
  }
}
